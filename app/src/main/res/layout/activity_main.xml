<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/unidades_11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/txtnumero"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/chofer"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/txtnumero"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spruta"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/chofer"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/iviniciar"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="#FFE40E0E"
        android:text="Iniciar Viaje"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/btn_transferir"
        android:onClick="onClickIniciarViaje"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_transferir"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="#FFE40E0E"
        android:text="Transferir Datos"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/iviniciar"
        android:layout_alignStart="@+id/iviniciar"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
